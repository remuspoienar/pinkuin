<div class="container devise-container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="form-devise-override-heading">PROJECT DETAILS</h2>
    </div>
  </div>

  <div class="row">
    <br>
  </div>

  <div class="form-base row">
    <div class="col-md-12">

      <div class="text-center">
        <br>

        <%= fa_icon 'briefcase' %>
        <label class="control-label">Name</label>
        <div class="well well-sm"><%= @project.name %></div>

        <br>

        <%= fa_icon 'pencil' %>
        <label class="control-label">Description</label>
        <div class="well well-lg"><%= @project.description %></div>

        <br>

        <%= fa_icon 'user-o' %>
        <label class="control-label">Author</label>
        <div class="well well-sm"><%= @project.author.username %></div>

        <br>

        <div class="a">
          <p>
            <%= link_to fa_icon('pencil').html_safe + ' Edit', edit_project_path(@project), class: 'btn btn-warning' %>
            <%= link_to fa_icon('trash').html_safe + ' Delete', @project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </p>
          <br>
          <%= link_to 'Back to all projects', projects_path %>
          <p></p>
        </div>


      </div>

    </div>
  </div>

</div>
