.container
  .row
    .col-md-12
      %h2.form-heading
        Edit #{resource_name.to_s.humanize}

  .row
    %br

  = render 'devise/shared/error_messages'

  .row
    .col-md-12

      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-base text-center no-padding' }) do |f|

        .pd-em-2

          %fieldset.email-group
            = fa_icon 'envelope'
            = f.email_field :email, class: 'form-control', autofocus: true, autocomplete: 'off', placeholder: 'Email address', required: true

            - if devise_mapping.confirmable? && resource.pending_reconfirmation?
              Currently waiting confirmation for: #{resource.unconfirmed_email}

          %br

          %fieldset.text-group
            = fa_icon 'user', class: 'pd-right-px-4'
            = f.text_field :username, class: 'form-control', autocomplete: 'off', placeholder: 'Desired username', required: true

          %br

          %fieldset.password-group
            = fa_icon 'key'
            = f.password_field :password, class: 'form-control', autocomplete: 'off', placeholder: "(leave blank if you don't want to change it)"

          %br

          %fieldset.password-group
            = fa_icon 'key'
            = f.password_field :password_confirmation, class: 'form-control', autocomplete: 'off', placeholder: 'Password confirmation'

          %br
          %br

          %p
            insert your current password to confirm your changes

          %fieldset.password-group
            = fa_icon 'key'
            = f.password_field :current_password, class: 'form-control', autocomplete: 'off'

        .actions
          = f.submit 'update', class: 'btn btn-submit'

  .row
    %br
    %br

  .row
    .col-md-12

      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { confirm: "Are you sure?" }, method: :delete, class: 'form-base' }) do |f|

        .pd-em-1

          = f.hidden_field :reset_password_token

          %br

          %h4.text-center Unhappy with your account ?

        .actions
          = f.submit 'delete account', class: 'btn btn-submit-danger'
