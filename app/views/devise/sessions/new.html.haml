.container
  .row
    .col-md-12
      %h2.form-heading
        Sign in

  .row
    %br

  .row
    .col-md-12

      = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-base text-center no-padding' }) do |f|

        .pd-em-2

          %fieldset.email-group
            = fa_icon 'user', class: 'pd-right-px-4'
            = f.email_field :email, class: 'form-control', placeholder: 'Email address', required: true

          %br

          %fieldset.password-group
            = fa_icon 'key'
            = f.password_field :password, class: 'form-control', placeholder: 'Password', required: true

          %br

          - if devise_mapping.rememberable?

            %fieldset.checkbox-group
              = f.check_box :remember_me
              = f.label :remember_me

            %br

          .links
            = render 'devise/shared/links'

        .actions
          = f.submit 'sign in', class: 'btn btn-submit'
