<div id="devise-override-window" class="container text-center">
  <div class="row">
    <div class="col-md-12">
      <h2 class="form-devise-override-heading">Change your password</h2>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-devise-override'}) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>


      <%= f.password_field :password, class: 'form-control',  autofocus: true, autocomplete: "off", placeholder: "New password (#{@minimum_password_length} characters minimum)" %>

      <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off", placeholder: 'Confirm new password' %>

      <div class="actions">
        <%= f.submit "Change my password", class: 'btn btn-lg btn-primary btn-block' %>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>